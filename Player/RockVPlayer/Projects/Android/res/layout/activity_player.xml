<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:screenOrientation="landscape"
    android:orientation="vertical"
    android:background="@drawable/background"  >
    
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="6"
	    android:orientation="horizontal" >
	    
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_weight="9.91"
		    android:orientation="vertical" >
	      
		 	<LinearLayout
			      android:orientation="horizontal"
			      android:layout_width="fill_parent"
			      android:layout_height="fill_parent"
			      android:layout_weight="1">
	
		 		<TextView
		 		    android:id="@+id/txtTrack1"
		 		    android:layout_width="wrap_content"
		 		    android:layout_height="fill_parent"
		 		    android:layout_weight="1"
		 		    android:gravity="center"
		 		    android:text="演奏"
		 		    android:textSize="22sp" />
		 		
		 		<SeekBar
		 		    android:id="@+id/skbTrack1"
		 		    android:layout_width="wrap_content"
		 		    android:layout_height="wrap_content"
		 		    android:layout_gravity="center_vertical"
		 		    android:layout_weight="5"
		 		    android:gravity="center" />
		 		
		 		<CheckBox
		 		    android:id="@+id/chbTrack1"
		 		    android:layout_width="wrap_content"
		 		    android:layout_height="wrap_content"
		 		    android:layout_gravity="center_vertical"
		 		    android:layout_weight="1"
		 		    android:text="  " />
		    
		    </LinearLayout>
		    
		 	<LinearLayout
			      android:orientation="horizontal"
			      android:layout_width="fill_parent"
			      android:layout_height="fill_parent"
			      android:layout_weight="1">	
			      
		 		<TextView
		 		    android:id="@+id/txtTrack2"
		 		    android:layout_width="wrap_content"
		 		    android:layout_height="fill_parent"
		 		    android:layout_weight="1"
		 		    android:gravity="center"
		 		    android:text="伴奏"
		 		    android:textSize="22sp" />
		 		
		 		<SeekBar
		 		    android:id="@+id/skbTrack2"
		 		    android:layout_width="wrap_content"
		 		    android:layout_height="wrap_content"
		 		    android:layout_gravity="center_vertical"
		 		    android:layout_weight="5"
		 		    android:gravity="center" />
		 		
		 		<CheckBox
		 		    android:id="@+id/chbTrack2"
		 		    android:layout_width="wrap_content"
		 		    android:layout_height="wrap_content"
		 		    android:layout_gravity="center_vertical"
		 		    android:layout_weight="1"
		 		    android:text="  " />	 	 	    
		    </LinearLayout>
		    
		 	<LinearLayout
			      android:orientation="horizontal"
			      android:layout_width="fill_parent"
			      android:layout_height="fill_parent"
			      android:layout_weight="1">	

		 		<TextView
		 		    android:id="@+id/txtTrack3"
		 		    android:layout_width="wrap_content"
		 		    android:layout_height="fill_parent"
		 		    android:layout_weight="1"
		 		    android:gravity="center"
		 		    android:text="节奏"
		 		    android:textSize="22sp" />
		 		
		 		<SeekBar
		 		    android:id="@+id/skbTrack3"
		 		    android:layout_width="wrap_content"
		 		    android:layout_height="wrap_content"
		 		    android:layout_gravity="center_vertical"
		 		    android:layout_weight="5"
		 		    android:gravity="center" />	 		
		 		<CheckBox
		 		    android:id="@+id/chbTrack3"
		 		    android:layout_width="wrap_content"
		 		    android:layout_height="wrap_content"
		 		    android:layout_gravity="center_vertical"
		 		    android:layout_weight="1"
		 		    android:text="  " />	 		          
		    </LinearLayout>	      
	  	</LinearLayout>
	  
		<LinearLayout
		    android:layout_width="230dp"
		    android:layout_height="fill_parent"
		    android:layout_weight="2.99"
		    android:orientation="vertical" >
		 	
		  <LinearLayout
		      android:orientation="vertical"
		      android:layout_width="fill_parent"
		      android:layout_height="fill_parent"
		      android:layout_weight="1" >

		      <RadioButton
		          android:id="@+id/rbNone"
		          android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_weight="1"
				  android:text="整曲无反复"
				  android:textSize="20dp" />    
		      <RadioButton
		          android:id="@+id/rbA"
		          android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:text="段落A反复"
				    android:textSize="20dp" />
		      <RadioButton
		          android:id="@+id/rbB"
		          android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:text="段落B反复"
				    android:textSize="20dp" />
		      <RadioButton
		          android:id="@+id/rbAll"
		          android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:text="整曲反复"
				    android:textSize="20dp" />		      		           		    
		  	</LinearLayout>	

		  			  	
			<LinearLayout
		      android:orientation="horizontal"
		      android:layout_width="fill_parent"
		      android:layout_height="fill_parent"
		      android:layout_weight="3" >

				<Button
				    android:id="@+id/btnPlay"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:text="播放"
				    android:textSize="24sp" />

				<Button
				    android:id="@+id/btnStop"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:text="停止"
				    android:textSize="24sp" />
		      		  	  
	  		</LinearLayout>				
	  	</LinearLayout>		  	  	  
	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="2"
	    android:orientation="horizontal" >

	   <TextView
	       android:id="@+id/txtPos"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_gravity="center_vertical|right"
	       android:layout_weight="1"
	       android:textColor="#ffffffff"
	       android:text="00:00" />
	    
 		<SeekBar
 		    android:id="@+id/skbPos"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:layout_gravity="center_vertical"
 		    android:layout_weight="14"
 		    android:gravity="center" />
 	   <TextView
	       android:id="@+id/txtDur"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_gravity="center_vertical"
	       android:layout_weight="1"
	       android:textColor="#ffffffff"
	       android:text="00:00" />			       
	</LinearLayout>	

</LinearLayout>